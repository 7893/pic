{
  "name": "pic",
  "version": "2.0.0",
  "description": "AI-powered photo collection and gallery on Cloudflare Workers",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.20.0",
    "npm": ">=11.8.0"
  },
  "workspaces": [
    "workers/pic-scheduler"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=pic-scheduler",
    "deploy": "npx wrangler deploy --config workers/pic-scheduler/wrangler.toml",
    "lint": "cd workers/pic-scheduler && npx tsc --noEmit",
    "lint:fix": "cd workers/pic-scheduler && npx tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "npm run test --workspaces",
    "audit": "npm audit --workspaces",
    "prepare": "husky install"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "serverless",
    "ai",
    "image",
    "unsplash"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "wrangler": "^4.65.0"
  }
}
